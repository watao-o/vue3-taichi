{
  "extends": "./.nuxt/tsconfig.app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["vitest"],
    "paths": {
      "@": ["./app"],
      "@/*": ["./app/*"],
      "~": ["./app"],
      "~/*": ["./app/*"]
    }
  },
  "include": [
    "./.nuxt/nuxt.d.ts",
    "./.nuxt/components.d.ts",
    "./.nuxt/types/**/*.d.ts",
    "./app/**/*.ts",
    "./app/**/*.tsx",
    "./app/**/*.vue",
    "./types/**/*.d.ts",
    "./test/**/*.ts",
    "./test/**/*.cts",
    "./test/**/*.mts",
    "./test/**/*.tsx",
    "./test/**/*.vue"
  ]
}
